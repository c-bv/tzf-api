    },
    "author": "H64",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.2",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-winston": "^4.2.0",
        "http-status": "^1.7.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.1.0",
        "stripe": "^14.13.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.3.1",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
