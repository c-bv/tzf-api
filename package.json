{
    "name": "tzf-api",
    "version": "0.0.1",
    "description": "The Zero Fund API",
    "main": "src/index.ts",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "export NODE_ENV=development && nodemon src/index.ts",
        "build": "tsc",
        "update": "ncu --interactive --format group",
        "lint": "eslint --ext .ts,.js src",
        "lint:fix": "eslint --fix --ext .ts,.js src",
        "format": "prettier --write './**/*.{js,ts,css,md,json}' --config ./.prettierrc",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gitlab.com/h64/fondscarbone-api.git"
    },
    "author": "H64",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.4",
        "express-winston": "^4.2.0",
        "http-status": "^1.7.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.16",
        "@types/express": "^4.17.21",
        "@types/express-rate-limit": "^6.0.0",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.9.2",
        "@typescript-eslint/eslint-plugin": "^6.11.0",
        "@typescript-eslint/parser": "^6.11.0",
        "eslint": "^8.54.0",
        "eslint-plugin-unused-imports": "^3.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.1.0",
        "nodemon": "^3.0.1",
        "npm-check-updates": "^16.14.11",
        "prettier": "3.1.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    }
}
