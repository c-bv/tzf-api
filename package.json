        "@typescript-eslint/parser": "^6.19.0",
        "eslint": "^8.56.0",
        "eslint-plugin-jest": "^27.6.3",
        "eslint-plugin-unused-imports": "^3.0.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.0",
        "mongodb-memory-server": "^9.1.6",
        "nodemon": "^3.0.3",
        "npm-check-updates": "^16.14.12",
        "prettier": "3.2.4",
