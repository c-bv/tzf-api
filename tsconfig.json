{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@config/*": ["src/config/*"],
            "@controllers": ["src/controllers/index.ts"],
            "@middlewares/*": ["src/middlewares/*"],
            "@models": ["src/models/index.ts"],
            "@schemas": ["src/models/schemas/index.ts"],
            "@routes/*": ["src/routes/*"],
            "@services": ["src/services/index.ts"],
            "@utils/*": ["src/utils/*"],
            "@custom-types/*": ["types/*"],
            "@test/*": ["test/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "test"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
